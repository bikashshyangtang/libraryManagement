@model AuthorViewModel
@{
    ViewData["Title"] = "Edit Author";
}

<h2>Edit Author</h2>
<form action="Edit" method="post">
    <input type="hidden" asp-for="@Model.AuthorId">
    <div class="form-group mb-3">
        <label asp-for="@Model.FirstName" class="form-label">First Name</label>
        <input asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.LastName" class="form-label">Last Name</label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Email" class="form-label">Email</label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.IsAwardWinner" class="form-label">Award Winner</label>
        <input asp-for="@Model.IsAwardWinner" class="form-control" />
        <span asp-validation-for="@Model.IsAwardWinner" class="text-danger"></span>
    </div>
        <div class="form-group mb-3">
        <label asp-for="@Model.IsBestSeller" class="form-label">Best Seller</label>
        <input asp-for="@Model.IsBestSeller" class="form-control" />  
        <span asp-validation-for="@Model.IsBestSeller" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>