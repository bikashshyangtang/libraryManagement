@model BookViewModel;
@{
    ViewData["Title"] = "Edit Book";
}

<h2>Edit Book</h2>
<form action="Edit" method="post">
    <input type="hidden" asp-for="@Model.BookId">
    <div class="form-group mb-3">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input asp-for="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Genre" class="form-label">Genre</label>
        <input asp-for="@Model.Genre" class="form-control" />
        <span asp-validation-for="@Model.Genre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.PublishedDate" class="form-label">Published Date</label>
        <input asp-for="@Model.PublishedDate" class="form-control" type="number" />  
        <span asp-validation-for="@Model.PublishedDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.AuthorName" class="form-label">Author Name</label>
        <input asp-for="@Model.AuthorName" class="form-control" />
        <span asp-validation-for="@Model.AuthorName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.BranchName" class="form-label">Branch Name</label>
        <input asp-for="@Model.BranchName" class="form-control" />
        <span asp-validation-for="@Model.BranchName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.ISBN" class="form-label">ISBN</label>
        <input asp-for="@Model.ISBN" class="form-control" />
        <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>